                </LinearLayout>
            </LinearLayout>
            <View android:id="@+id/payment_settings_services_separator" android:background="@drawable/list_separator_top" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/payment_settings_card_separator_height"/>
