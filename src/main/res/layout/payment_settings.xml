                    <com.whatsapp.WaImageView android:id="@+id/fb_pay_hub_add" android:visibility="gone" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_action_add" android:tint="@color/settings_accented_text"/>
                    <com.whatsapp.WaImageView android:id="@+id/fb_pay_hub_chevron" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/chevron_right"/>
                </LinearLayout>
            </LinearLayout>
            <View android:background="@drawable/list_separator_top" android:layout_width="match_parent" android:layout_height="@dimen/payment_settings_card_separator_height"/>
            <LinearLayout android:orientation="vertical" android:background="@color/primary_surface" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/payment_support_container" android:background="?android:attr/selectableItemBackground" android:paddingLeft="@dimen/settings_row_horizontal_padding" android:paddingTop="@dimen/settings_row_vertical_padding_small" android:paddingRight="@dimen/settings_row_horizontal_padding" android:paddingBottom="@dimen/settings_row_vertical_padding_small" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <com.whatsapp.WaImageView android:id="@+id/payment_support_icon" android:layout_width="@dimen/payment_settings_icon_size" android:layout_height="@dimen/payment_settings_icon_size" android:layout_marginRight="@dimen/settings_icon_margin_end" android:src="@drawable/ic_settings_help"/>
                    <com.whatsapp.WaTextView android:textSize="@dimen/settings_title_text_size" android:textColor="@color/settings_item_title_text" android:id="@+id/payment_support_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/settings_help"/>
                </LinearLayout>
            </LinearLayout>
            <View android:background="@drawable/list_separator_top" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <FrameLayout android:id="@+id/custom_footer_container" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="52dp"/>
        </LinearLayout>
    </ScrollView>
    <include android:layout_gravity="bottom|right|center_vertical|center_horizontal|center|end" android:id="@+id/send_payment_fab" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/payment_settings_default_margin" layout="@layout/payments_floating_action_button"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
