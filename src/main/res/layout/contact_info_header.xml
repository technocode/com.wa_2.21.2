<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:id="@+id/header_placeholder" android:layout_width="match_parent" android:layout_height="@dimen/info_screen_header"/>
    <include layout="@layout/smb_label_scroller_stub"/>
    <View android:id="@+id/header_bottom_shadow" android:visibility="gone" style="@style/ListBottomShadow"/>
    <ViewStub android:id="@+id/business_details_card_stub" android:inflatedId="@+id/business_details_card" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <include layout="@layout/live_location_card"/>
    <com.whatsapp.ui.media.MediaCard android:id="@+id/media_card_view" android:layout_width="match_parent" android:layout_height="wrap_content" app:icContentColor="@color/primary_surface" app:mcTitle="@string/view_conversation_media" style="@style/InfoCard"/>
    <include layout="@layout/actions_card"/>
    <include layout="@layout/contact_info_security_card"/>
    <com.whatsapp.InfoCard android:orientation="vertical" android:id="@+id/status_card" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/InfoCard">
        <LinearLayout android:orientation="vertical" android:background="@color/primary_surface" android:layout_width="match_parent" android:layout_height="wrap_content">
            <FrameLayout style="@style/FlatCardHeader">
                <com.whatsapp.WaTextView android:id="@+id/status_and_phone_title" android:paddingLeft="@dimen/info_screen_padding" android:text="@string/contact_info_and_phone" style="@style/FlatCardTitle"/>
            </FrameLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/status_container" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.whatsapp.TextEmojiLabel android:ellipsize="none" android:layout_gravity="left" android:id="@+id/status" android:paddingLeft="@dimen/info_screen_padding" android:paddingTop="10dp" android:paddingRight="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="false" style="@style/ListItemTitle"/>
                <com.whatsapp.WaTextView android:layout_gravity="left" android:id="@+id/status_info" android:paddingLeft="@dimen/info_screen_padding" android:paddingBottom="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/ListItemSubtitleSmall"/>
            </LinearLayout>
            <View android:id="@+id/status_separator" style="@style/FlatCardSeparator"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/status_info_phone_container" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <include layout="@layout/contact_info_phone"/>
            </LinearLayout>
        </LinearLayout>
    </com.whatsapp.InfoCard>
    <LinearLayout android:orientation="vertical" android:id="@+id/groups_card" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View style="@style/ListTopShadow"/>
        <FrameLayout android:background="@color/primary_surface" android:paddingLeft="@dimen/info_screen_padding" style="@style/FlatCardHeader">
            <com.whatsapp.WaTextView android:ellipsize="end" android:id="@+id/groups_in_common" android:paddingRight="32dp" android:text="@string/groups_in_common" android:singleLine="true" style="@style/FlatCardTitle"/>
            <com.whatsapp.WaTextView android:id="@+id/groups_info" style="@style/FlatCardInfo"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
