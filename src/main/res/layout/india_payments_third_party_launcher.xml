<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/parent_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:layout_gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="vertical" android:id="@+id/overlay_container" android:background="@drawable/display_qrcode_white_background" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="32dp" android:layout_marginTop="32dp" android:layout_marginRight="32dp">
            <com.whatsapp.WaTextView android:textSize="18sp" android:textColor="@color/primary_text" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/user_account_name" android:paddingLeft="18dp" android:paddingRight="18dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="44dp" android:layout_marginBottom="7dp" app:fontFamily="sans-serif-medium"/>
            <com.whatsapp.WaTextView android:textSize="12sp" android:textColor="@color/secondary_text" android:layout_gravity="center_horizontal" android:id="@+id/user_wa_vpa" android:layout_width="wrap_content" android:layout_height="wrap_content" app:fontFamily="sans-serif-medium"/>
            <com.whatsapp.WaTextView android:textSize="44sp" android:textColor="@color/primary_text" android:gravity="center" android:layout_gravity="center" android:id="@+id/display_payment_amount" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="16dp" android:singleLine="true"/>
            <com.whatsapp.components.Button android:id="@+id/make_payment" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="36dp" android:layout_marginTop="12dp" android:layout_marginRight="36dp" android:layout_marginBottom="12dp" android:text="@string/make_payment" style="@style/WA.Button"/>
        </LinearLayout>
        <com.whatsapp.WaImageView android:layout_gravity="top|center_vertical|center_horizontal|center" android:layout_width="70dp" android:layout_height="70dp" android:src="@drawable/primary_color_circle" android:contentDescription="@null"/>
        <com.whatsapp.WaImageView android:layout_gravity="top|center_vertical|center_horizontal|center" android:id="@+id/contact_photo" android:layout_width="@dimen/mid_avatar_size" android:layout_height="@dimen/mid_avatar_size" android:layout_marginTop="4dp" android:src="@drawable/avatar_contact" android:scaleType="fitCenter" android:contentDescription="@string/contact_profile_photo"/>
    </FrameLayout>
</FrameLayout>
