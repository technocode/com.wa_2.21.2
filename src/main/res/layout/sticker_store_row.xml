    </com.whatsapp.stickers.TouchDiscardLayout>
    <FrameLayout android:layout_gravity="right" android:id="@+id/buttons" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:minWidth="64dp" android:layout_alignParentRight="true" android:layout_centerVertical="true">
        <FrameLayout android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/sticker_update_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp">
            <com.whatsapp.WaTextView android:textSize="14sp" android:textColor="@color/primary_light" android:id="@+id/sticker_update_text" android:background="@drawable/sticker_update_button" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sticker_pack_update" android:contentDescription="@string/sticker_pack_update_content_description" android:textAllCaps="true"/>
            <ProgressBar android:layout_gravity="center" android:id="@+id/pack_update_progress" android:visibility="gone" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:indeterminate="true"/>
        </FrameLayout>
        <LinearLayout android:layout_gravity="right|center_vertical|center_horizontal|center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp">
            <com.whatsapp.WaImageView android:id="@+id/button_one" android:visibility="gone" style="@style/StickerStoreListButton"/>
            <com.whatsapp.WaImageView android:id="@+id/button_two" android:visibility="gone" app:tint="@color/stickerReorderTint" style="@style/StickerStoreListButton"/>
            <ProgressBar android:layout_gravity="center" android:id="@+id/pack_download_progress" android:visibility="gone" android:layout_width="24dp" android:layout_height="24dp" android:layout_margin="12dp"/>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
