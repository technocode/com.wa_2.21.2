            </FrameLayout>
            <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <com.whatsapp.WaImageView android:layout_gravity="center_vertical" android:id="@+id/search_down" android:paddingLeft="16dp" android:paddingRight="16dp" android:focusable="true" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/button_down" android:contentDescription="@string/search_later" style="@style/ActionBarButtonStyle"/>
