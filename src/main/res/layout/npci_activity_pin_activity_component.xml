<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/main_layout" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:background="#f1f1f1" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="56dp">
        <com.whatsapp.WaTextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/npci_text_primary_dark" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tv_acc_or_payee" android:layout_width="wrap_content" android:layout_height="match_parent" android:maxWidth="182dp" android:maxLines="2"/>
        <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
        <com.whatsapp.WaImageView android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/ic_upi_npci_logo"/>
    </LinearLayout>
    <View android:background="#d7d7d7" android:layout_width="match_parent" android:layout_height="1dp"/>
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="36dp" android:fillViewport="true">
            <FrameLayout android:id="@+id/main_inner_layout" android:paddingBottom="@dimen/keyboard_height" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </ScrollView>
        <org.npci.commonlibrary.widget.Keypad android:layout_gravity="bottom" android:id="@+id/fragmentTelKeyboard" android:visibility="visible" android:layout_width="match_parent" android:layout_height="@dimen/keyboard_height"/>
        <include layout="@layout/npci_layout_transaction_details_header"/>
        <RelativeLayout android:orientation="vertical" android:id="@+id/error_layout" android:background="#f4f4f4" android:focusable="true" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
            <com.whatsapp.WaImageView android:focusable="true" android:clickable="true" android:layout_width="56dp" android:layout_height="56dp" android:src="@drawable/ic_error" android:layout_above="@+id/not_right" android:layout_centerInParent="true"/>
            <com.whatsapp.WaTextView android:textSize="24sp" android:textStyle="bold" android:textColor="#000000" android:gravity="center" android:id="@+id/not_right" android:paddingLeft="32dp" android:paddingRight="32dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="30dp" android:text="@string/npci_not_right" android:layout_above="@+id/error_message"/>
            <com.whatsapp.WaTextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/npci_key_digit_color" android:gravity="center" android:id="@+id/go_back" android:background="@drawable/stroked_rectangle_bg" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="56dp" android:layout_margin="20dp" android:text="@string/npci_go_back" android:layout_alignParentBottom="true"/>
            <com.whatsapp.WaTextView android:textSize="20sp" android:gravity="center" android:id="@+id/error_message" android:paddingLeft="32dp" android:paddingRight="32dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="@string/npci_error_msg" android:layout_above="@+id/go_back"/>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
