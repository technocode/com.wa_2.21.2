<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/primary_surface" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="@dimen/payment_settings_default_margin" android:layout_marginRight="@dimen/payment_settings_default_margin" style="@style/CardSeparator"/>
    <RelativeLayout android:layout_gravity="center" android:id="@+id/payment_people_container" android:background="@drawable/selector_orange_gradient" android:padding="@dimen/payment_settings_default_margin" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ProgressBar android:id="@+id/payment_people_progress_bar" android:visibility="gone" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginRight="@dimen/payment_settings_default_margin" android:indeterminate="true" android:indeterminateOnly="true" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <com.whatsapp.WaImageView android:id="@+id/payment_people_icon" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginRight="@dimen/payment_settings_default_margin" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/payment_people_icon" android:layout_centerInParent="true">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.whatsapp.WaTextView android:textSize="14sp" android:textColor="@color/settings_item_subtitle_text" android:id="@+id/payment_send_action" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" style="@style/ListItemTitle"/>
                <com.whatsapp.WaTextView android:textSize="14sp" android:textColor="@color/list_item_sub_title" android:gravity="right" android:layout_gravity="right" android:id="@+id/payment_send_action_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/payment_settings_default_margin" style="@style/ListItemTitle"/>
            </LinearLayout>
            <com.whatsapp.WaTextView android:textColor="@color/settings_item_title_text" android:gravity="left" android:id="@+id/payment_people_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="false" style="@style/ListItemTitle"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
