<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:gravity="bottom" android:id="@+id/edit_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:id="@+id/text_entry_layout" android:paddingLeft="4dp" android:paddingTop="3.25dp" android:paddingRight="0dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/buttons" android:layout_centerVertical="true">
        <LinearLayout android:gravity="bottom" android:layout_gravity="bottom" android:orientation="vertical" android:id="@+id/input_layout" android:background="@drawable/ib_new_round" android:paddingLeft="0dp" android:paddingTop="0dp" android:paddingRight="9dp" android:paddingBottom="0dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="0dp" android:minHeight="47dp">
            <FrameLayout android:id="@+id/quoted_message_preview_container" android:paddingLeft="8dp" android:paddingTop="8dp" android:paddingRight="8dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <FrameLayout android:id="@+id/web_page_preview_container" android:paddingLeft="8dp" android:paddingTop="8dp" android:paddingRight="8dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/input_layout_content" android:paddingBottom="0.25dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="47dp">
                <com.whatsapp.WaImageButton android:layout_gravity="bottom" android:id="@+id/emoji_picker_btn" android:layout_width="44dp" android:layout_height="47dp" android:src="@drawable/ib_emoji" android:scaleType="center" android:contentDescription="@string/emoji_button_description" app:tint="@color/ibEmojiIconTint" style="@style/ActionBarButtonStyle"/>
                <com.whatsapp.MentionableEntry android:scrollbarAlwaysDrawVerticalTrack="true" android:scrollbarStyle="outsideOverlay" android:textColor="@color/primary_text" android:textColorHint="@color/hint_text" android:layout_gravity="center_vertical" android:id="@+id/entry" android:background="@null" android:paddingTop="4dp" android:paddingRight="8dp" android:paddingBottom="4dp" android:scrollbars="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:maxLines="6" android:capitalize="sentences" android:autoText="true" android:layout_weight="1" android:imeOptions="actionSend" android:scrollbarFadeDuration="300" android:scrollbarDefaultDelayBeforeFade="200"/>
                <com.whatsapp.WaImageButton android:layout_gravity="bottom" android:id="@+id/input_attach_button" android:visibility="gone" android:layout_width="44dp" android:layout_height="47dp" android:src="@drawable/ib_attach" android:scaleType="center" android:contentDescription="@string/attach" style="@style/ActionBarButtonStyle"/>
                <com.whatsapp.WaImageButton android:layout_gravity="bottom" android:id="@+id/camera_btn" android:visibility="gone" android:layout_width="44dp" android:layout_height="47dp" android:layout_marginRight="3dp" android:src="@drawable/ic_camera" android:scaleType="center" android:contentDescription="@string/camera_button_description" app:tint="@color/inputCameraTint" style="@style/ActionBarButtonStyle"/>
                <ViewStub android:layout_gravity="bottom" android:id="@+id/stub_quick_reply_btn" android:layout_width="44dp" android:layout_height="47dp" style="@style/ActionBarButtonStyle"/>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout android:gravity="bottom" android:layout_gravity="bottom" android:id="@+id/voice_note_stub" android:clipChildren="false" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </FrameLayout>
    <FrameLayout android:id="@+id/buttons" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/input_layout_buttons_positioning_margin" android:layout_marginBottom="@dimen/input_layout_buttons_positioning_margin" android:layout_alignBottom="@+id/text_entry_layout" android:layout_alignParentRight="true">
        <FrameLayout android:id="@+id/send_container" android:background="@drawable/input_circle" android:paddingLeft="0dp" android:paddingTop="0dp" android:paddingRight="0dp" android:paddingBottom="0dp" android:addStatesFromChildren="true" android:layout_width="@dimen/input_layout_buttons_size" android:layout_height="@dimen/input_layout_buttons_size" android:layout_marginRight="@dimen/input_layout_buttons_margin" android:layout_marginBottom="@dimen/input_layout_buttons_margin">
            <com.whatsapp.WaImageButton android:layout_gravity="center" android:id="@+id/send" android:background="@color/transparent" android:layout_width="47dp" android:layout_height="47dp" android:src="@drawable/input_send" android:scaleType="center" android:contentDescription="@string/send_button"/>
            <com.whatsapp.WaImageButton android:layout_gravity="center" android:id="@+id/voice_note_btn" android:background="@color/transparent" android:visibility="gone" android:layout_width="47dp" android:layout_height="47dp" android:src="@drawable/input_mic_white" android:scaleType="center" android:contentDescription="@string/voice_note_button"/>
        </FrameLayout>
    </FrameLayout>
</RelativeLayout>
