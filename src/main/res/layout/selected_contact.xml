<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:whatsapp="http://schemas.android.com/apk/res-auto" android:layout_gravity="top" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="match_parent">
