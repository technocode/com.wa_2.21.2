<?xml version="1.0" encoding="utf-8"?>
<com.whatsapp.KeyboardPopupLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/root_layout" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:clipChildren="false" android:layout_width="480dp" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:layout_centerInParent="true">
        <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentRight="true">
            <View android:id="@+id/prev_btn_ext" android:layout_width="40dp" android:layout_height="48dp"/>
            <View android:id="@+id/next_btn_ext" android:layout_width="40dp" android:layout_height="48dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:background="@drawable/popup_rounded_corner" android:clipChildren="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@drawable/popup_rounded_header" android:paddingLeft="2dp" android:paddingRight="2dp" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize">
                <com.whatsapp.WaImageView android:id="@+id/popup_thumb" android:layout_width="38dp" android:layout_height="38dp" android:layout_marginLeft="4dp" android:layout_marginTop="5dp" android:layout_marginRight="2dp" android:layout_marginBottom="5dp" android:src="@mipmap/icon" android:scaleType="fitCenter"/>
                <LinearLayout android:gravity="left|center_vertical|center_horizontal|center" android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                    <com.whatsapp.TextEmojiLabel android:ellipsize="end" android:gravity="left|center_vertical|center_horizontal|center" android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/popup_title" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lines="1" android:singleLine="true" style="@style/Theme.ActionBar.TitleTextStyle.Condensed"/>
                    <com.whatsapp.WaTextView android:ellipsize="end" android:gravity="left|center_vertical|center_horizontal|center" android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/conversation_contact_status" android:paddingLeft="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-3dp" android:lines="1" android:singleLine="true" style="@style/Theme.ActionBar.SubtitleTextStyle"/>
                </LinearLayout>
                <View android:orientation="horizontal" android:id="@+id/navigation_divider" android:background="@color/actionbar_separator" android:layout_width="1dp" android:layout_height="match_parent" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"/>
                <FrameLayout android:id="@+id/navigation_holder" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp">
                    <com.whatsapp.WaTextView android:textSize="12dp" android:textColor="@color/white" android:layout_gravity="center_horizontal" android:id="@+id/popup_count" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <com.whatsapp.WaImageView android:id="@+id/prev_btn" android:paddingTop="16dp" android:layout_width="24dp" android:layout_height="32dp" android:src="@drawable/selector_media_prev"/>
                        <com.whatsapp.WaImageView android:id="@+id/next_btn" android:paddingTop="16dp" android:paddingRight="2dp" android:layout_width="26dp" android:layout_height="32dp" android:src="@drawable/selector_media_next"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
            <FrameLayout android:id="@+id/conversation_entry_holder" android:clipChildren="false" android:layout_width="match_parent" android:layout_height="148dp">
                <RelativeLayout android:clipChildren="true" android:layout_width="match_parent" android:layout_height="@dimen/popup_gallery_height">
                    <com.whatsapp.notification.PopupNotificationViewPager android:id="@+id/message_view_pager" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="@dimen/popup_gallery_height"/>
                    <FrameLayout android:id="@+id/voice_recorder_decor" android:background="@color/transparent" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/popup_gallery_height"/>
                </RelativeLayout>
                <include layout="@layout/conversation_entry"/>
            </FrameLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@drawable/popup_rounded_footer" android:layout_width="match_parent" android:layout_height="58dp" android:layout_marginTop="3dp">
                <com.whatsapp.WaButton android:id="@+id/popup_ok_btn" android:background="?attr/actionBarItemBackground" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/close" android:layout_weight="0.5"/>
                <View android:background="@color/popupNotificationFooterBorder" android:layout_width="1dp" android:layout_height="match_parent"/>
                <com.whatsapp.WaButton android:id="@+id/popup_action_btn" android:background="?attr/actionBarItemBackground" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/view" android:layout_weight="0.5"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <View android:id="@+id/proximity_overlay" android:background="@color/conversation_proximity_overlay" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <com.whatsapp.emoji.search.EmojiSearchContainer android:id="@+id/popup_search_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true"/>
</com.whatsapp.KeyboardPopupLayout>
