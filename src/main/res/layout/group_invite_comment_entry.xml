<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="bottom" android:layout_gravity="bottom" android:orientation="horizontal" android:id="@+id/emoji_popup_anchor" android:paddingLeft="@dimen/horizontal_padding" android:paddingRight="@dimen/horizontal_padding" android:paddingBottom="@dimen/horizontal_padding" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:id="@+id/emoji_btn_holder" android:paddingBottom="1dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="-12dp" android:layout_marginRight="-4dp">
                <com.whatsapp.WaTextView android:textColor="@color/secondary_text" android:layout_gravity="center_horizontal" android:id="@+id/counter" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <com.whatsapp.WaImageButton android:layout_gravity="center_vertical" android:id="@+id/emoji_picker_btn" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/ib_emoji" android:scaleType="center" android:contentDescription="@string/emoji_button_description" app:tint="@color/ibEmojiIconTint" style="@style/ActionBarButtonStyle"/>
            </LinearLayout>
            <com.whatsapp.MentionableEntry android:scrollbarAlwaysDrawVerticalTrack="true" android:scrollbarStyle="outsideOverlay" android:textSize="16sp" android:textColor="@color/primary_text" android:textColorHint="@color/hint_text" android:id="@+id/comment" android:scrollbars="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:minHeight="52dp" android:hint="@string/live_location_add_comment" android:maxLines="6" android:layout_weight="1" android:inputType="none|text|textCapSentences|textMultiLine" android:imeOptions="actionDone" android:scrollbarFadeDuration="300" android:scrollbarDefaultDelayBeforeFade="200"/>
            <com.whatsapp.WaImageButton android:id="@+id/send" android:layout_width="49dp" android:layout_height="49dp" android:src="@drawable/input_send" android:contentDescription="@string/send_button" style="@style/GreenFAB"/>
        </LinearLayout>
        <com.whatsapp.emoji.search.EmojiSearchContainer android:id="@+id/emoji_search_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</merge>
