<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
    <LinearLayout android:orientation="vertical" android:paddingLeft="24dp" android:paddingTop="24dp" android:paddingRight="24dp" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.whatsapp.WaTextView android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/code_info" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/Text.Description"/>
        <RelativeLayout android:layout_gravity="center" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp">
            <com.whatsapp.CodeInputField android:textSize="22sp" android:gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/code" android:background="@null" android:layout_width="160dp" android:layout_height="wrap_content" android:text="123-456" android:singleLine="true" android:digits="0123456789" android:inputType="number"/>
            <ProgressBar android:layout_gravity="bottom" android:id="@+id/progress_bar_code_input_blocked" android:layout_width="match_parent" android:layout_height="2dp" android:layout_marginTop="2dp" android:progress="100" android:progressDrawable="@drawable/blocked_code_input_progress" android:layout_below="@+id/code" android:layout_alignLeft="@+id/code" android:layout_alignRight="@+id/code" style="@style/Widget.ProgressBar.Horizontal"/>
        </RelativeLayout>
        <com.whatsapp.WaTextView android:textSize="14sp" android:textColor="@color/red_error" android:gravity="center" android:id="@+id/error" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginBottom="4dp"/>
        <Space android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
        <include android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="32dp" layout="@layout/page_indicator"/>
        <com.whatsapp.components.Button android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/submit" android:layout_marginTop="8dp" android:layout_marginBottom="16dp" android:text="@string/next" style="@style/WA.Button"/>
    </LinearLayout>
</ScrollView>
