        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp">
            <com.whatsapp.WaImageView android:layout_gravity="center" android:id="@+id/logo" android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/smb_about_logo" android:contentDescription="@string/smb_about_logo_content_description"/>
            <com.whatsapp.WaTextView android:textSize="20sp" android:textColor="@color/primary_text" android:layout_gravity="center" android:paddingLeft="24dp" android:paddingRight="24dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/biz_profile_education_title" app:fontFamily="sans-serif-medium"/>
            <com.whatsapp.WaTextView android:textSize="16sp" android:textColor="@color/primary_text" android:paddingLeft="24dp" android:paddingRight="24dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/biz_profile_education_description_1" android:lineSpacingExtra="6sp"/>
            <com.whatsapp.WaTextView android:textSize="16sp" android:textColor="@color/primary_text" android:paddingLeft="24dp" android:paddingRight="24dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/biz_profile_education_description_2" android:lineSpacingExtra="6sp"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/upsell_tooltip" android:background="@drawable/business_profile_upsell_tooltip" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="24dp">
