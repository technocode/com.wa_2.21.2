                <com.whatsapp.WaTextView android:textSize="14sp" android:textColor="@color/secondary_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="8dp" android:text="@string/biz_profile_education_title_upsell_description" android:lineSpacingExtra="6sp"/>
                <com.whatsapp.WaTextView android:textAppearance="?android:attr/actionMenuTextAppearance" android:textSize="16sp" android:textColor="@color/accent_light" android:layout_gravity="center" android:id="@+id/upsell_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="8dp" android:text="@string/biz_profile_education_upsell_button"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
