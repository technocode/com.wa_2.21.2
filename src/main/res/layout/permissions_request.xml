<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:paddingLeft="40dp" android:paddingRight="40dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:id="@+id/permission_request_dialog" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.whatsapp.WaFrameLayout android:layout_gravity="center" android:background="@drawable/panel_popup_top" android:layout_width="match_parent" android:layout_height="wrap_content" app:waflBackgroundTint="@color/panelPopupTopTint">
            <com.whatsapp.WaTextView android:textSize="18sp" android:textColor="@color/white" android:id="@+id/permission_title" android:paddingLeft="@dimen/horizontal_padding" android:paddingTop="18dp" android:paddingRight="@dimen/horizontal_padding" android:paddingBottom="18dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:paddingTop="40dp" android:paddingBottom="40dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <com.whatsapp.WaImageView android:layout_gravity="center_vertical" android:id="@+id/permission_image" android:paddingLeft="24dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <com.whatsapp.WaImageView android:layout_gravity="center_vertical" android:id="@+id/permission_image_1" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <com.whatsapp.WaImageView android:layout_gravity="center_vertical" android:id="@+id/permission_image_2" android:paddingLeft="12dp" android:paddingRight="24dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.whatsapp.WaFrameLayout>
        <com.whatsapp.WaLinearLayout android:orientation="vertical" android:background="@drawable/panel_popup_bot" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" app:wallBackgroundTint="@color/panelPopupBotTint">
            <com.whatsapp.WaTextView android:textSize="14sp" android:gravity="left" android:id="@+id/permission_message" android:paddingLeft="@dimen/horizontal_padding" android:paddingTop="32dp" android:paddingRight="@dimen/horizontal_padding" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" style="@style/Text"/>
            <com.whatsapp.components.AutoOrientationLinearLayout android:gravity="right" android:orientation="horizontal" android:id="@+id/footer_layout" android:paddingLeft="@dimen/horizontal_padding" android:paddingTop="12dp" android:paddingRight="@dimen/horizontal_padding" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.whatsapp.WaButton android:id="@+id/cancel" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/permission_cancel" style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
                <com.whatsapp.WaButton android:id="@+id/submit" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/permission_continue" style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
            </com.whatsapp.components.AutoOrientationLinearLayout>
        </com.whatsapp.WaLinearLayout>
    </LinearLayout>
</FrameLayout>
