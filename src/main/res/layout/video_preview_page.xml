<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/video_player" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <FrameLayout android:id="@+id/content" android:layout_width="match_parent" android:layout_height="match_parent">
        <include layout="@layout/media_guidelines"/>
        <include layout="@layout/doodle_view"/>
        <include layout="@layout/doodle_decoration"/>
        <FrameLayout android:layout_gravity="top|center_vertical|center_horizontal|center" android:id="@+id/trim_info_container" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <com.whatsapp.WaTextView android:id="@+id/trim_info" android:background="@drawable/video_preview_label_background" android:visibility="invisible" android:layout_marginTop="20dp" style="@style/VideoPreviewLabel"/>
        </FrameLayout>
        <FrameLayout android:id="@+id/video_controls" android:paddingTop="@dimen/actionbar_height" android:paddingBottom="@dimen/actionbar_height" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.whatsapp.VideoTimelineView android:id="@+id/timeline_view" android:paddingLeft="16dp" android:paddingTop="1dp" android:paddingRight="16dp" android:paddingBottom="4dp" android:focusable="true" android:layout_width="match_parent" android:layout_height="44dp" app:vtvBorderColor="@color/white" app:vtvBorderSize="2dp" app:vtvDimColor="@color/video_preview_timeline_background" app:vtvThumbColor="@color/white" app:vtvThumbColorPressed="@color/white" app:vtvThumbSize="6dp" app:vtvThumbSizePressed="8dp"/>
                <RelativeLayout android:paddingLeft="16dp" android:paddingTop="4dp" android:paddingRight="16dp" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:gravity="center" android:id="@+id/mute_video_container" android:background="@drawable/video_preview_label_background" android:visibility="gone" android:layout_width="36dp" android:layout_height="26dp" android:layout_marginRight="8dp">
                        <com.whatsapp.WaImageView android:id="@+id/mute_video" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_mute" android:tint="@color/white_alpha_100"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="horizontal" android:background="@drawable/video_preview_label_background" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/mute_video_container">
                        <com.whatsapp.WaTextView android:id="@+id/duration" style="@style/VideoPreviewLabel"/>
                        <com.whatsapp.WaTextView android:id="@+id/bullet_size" android:paddingLeft="0dp" android:paddingRight="0dp" android:text="@string/contacts_help_bullet" style="@style/VideoPreviewLabel"/>
                        <com.whatsapp.WaTextView android:id="@+id/size" style="@style/VideoPreviewLabel"/>
                    </LinearLayout>
                    <com.whatsapp.WaImageView android:id="@+id/video_gif_toggle" android:paddingLeft="12dp" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_gif_off" android:layout_alignParentRight="true" android:contentDescription="@string/video_gif_toggle"/>
                </RelativeLayout>
            </LinearLayout>
            <com.whatsapp.WaImageView android:layout_gravity="center" android:id="@+id/play" android:background="@drawable/exo_player_gray_circle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_video_play" android:scaleType="center" android:contentDescription="@string/play_video"/>
        </FrameLayout>
    </FrameLayout>
</FrameLayout>
