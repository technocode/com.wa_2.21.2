        <LinearLayout android:orientation="vertical" android:paddingLeft="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginRight="@dimen/horizontal_padding" android:layout_marginBottom="10dp" android:layout_weight="1">
