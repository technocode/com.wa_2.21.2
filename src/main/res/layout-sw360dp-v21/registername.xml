<?xml version="1.0" encoding="utf-8"?>
<com.whatsapp.KeyboardPopupLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:whatsapp="http://schemas.android.com/apk/res-auto" android:id="@+id/main" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.whatsapp.WaTextView android:layout_gravity="center" android:id="@+id/title" android:background="@color/primary_surface" android:paddingTop="16dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true" style="@style/RegistrationTitle"/>
    <View android:id="@+id/title_bottom_shadow" android:background="@drawable/bottom_elevation" android:visibility="gone" android:layout_width="match_parent" android:layout_height="15dp" android:layout_below="@+id/title"/>
    <com.whatsapp.registration.RegistrationScrollView android:id="@+id/reg_scroll_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/accept_button_and_shortcut_layout" android:layout_below="@+id/title">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.whatsapp.WaTextView android:textSize="14sp" android:textColor="@color/body_light_gray" android:gravity="center" android:id="@+id/biz_info_description" android:paddingLeft="16dp" android:paddingTop="16dp" android:paddingRight="16dp" android:paddingBottom="24dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <FrameLayout android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <com.whatsapp.components.button.ThumbnailButton android:id="@+id/change_photo_btn" android:layout_width="@dimen/registration_profile_photo_size" android:layout_height="@dimen/registration_profile_photo_size" android:src="@drawable/ic_reg_addphoto" android:scaleType="fitCenter" android:contentDescription="@string/profile_photo" whatsapp:tbtnRadius="-1dp"/>
                <ProgressBar android:layout_gravity="center" android:id="@+id/change_photo_progress" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" style="?android:attr/progressBarStyleInverse"/>
            </FrameLayout>
            <LinearLayout android:gravity="right" android:orientation="horizontal" android:paddingLeft="16dp" android:paddingTop="24dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RelativeLayout android:gravity="center_vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="8dp" android:layout_weight="1">
                    <com.whatsapp.WaEditText android:textSize="16dp" android:textColorHint="@color/secondary_text" android:ellipsize="end" android:id="@+id/registration_name" android:paddingRight="@dimen/counter_text_padding" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/register_name_hint" android:maxLines="1" android:lines="1" android:singleLine="true" android:inputType="textCapWords" android:imeOptions="actionDone" android:backgroundTint="@color/primary_light"/>
                    <com.whatsapp.WaTextView android:textSize="12sp" android:textColor="@color/secondary_text" android:id="@+id/name_counter_tv" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_alignBaseline="@+id/registration_name" android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <com.whatsapp.WaImageButton android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/emoji_btn" android:background="@null" android:paddingLeft="0dp" android:paddingRight="0dp" android:layout_width="wrap_content" android:layout_height="48dp" android:src="@drawable/ib_emoji" android:minWidth="0dp" android:minHeight="0dp" android:contentDescription="@string/emoji_button_description" whatsapp:tint="@color/ibEmojiIconTint"/>
            </LinearLayout>
        </LinearLayout>
    </com.whatsapp.registration.RegistrationScrollView>
    <View android:id="@+id/accept_button_top_shadow" android:background="@drawable/top_elevation" android:visibility="gone" android:layout_width="match_parent" android:layout_height="15dp" android:layout_above="@+id/accept_button_and_shortcut_layout"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/accept_button_and_shortcut_layout" android:background="@color/primary_surface" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <com.whatsapp.components.Button android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/register_name_accept" android:layout_marginTop="12dp" android:layout_marginBottom="12dp" android:text="@string/next" style="@style/WA.Button"/>
        <RelativeLayout android:id="@+id/shortcut_layout" android:background="@color/shortcut_layout_background" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="56dp">
            <com.whatsapp.WaTextView android:textSize="14sp" android:textColor="@color/primary_text" android:gravity="left|center_vertical|center_horizontal|center" android:paddingRight="14dp" android:layout_width="wrap_content" android:text="@string/install_app_shortcut" android:layout_toLeftOf="@+id/cbx_app_shortcut" android:layout_alignParentLeft="true" android:layout_centerVertical="true" style="@style/Text.Description"/>
            <CheckBox android:gravity="center" android:id="@+id/cbx_app_shortcut" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
    <com.whatsapp.emoji.search.EmojiSearchContainer android:id="@+id/emoji_search_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true"/>
</com.whatsapp.KeyboardPopupLayout>
